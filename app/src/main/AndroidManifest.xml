<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycontacts">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyContacts">
        <activity
            android:name=".ViewFriends"
            android:label="@string/title_activity_view_friends"
            android:theme="@style/Theme.MyContacts.NoActionBar"></activity>
        <activity
            android:name=".FriendsContacts"
            android:label="@string/title_activity_friends_contacts"
            android:theme="@style/Theme.MyContacts.NoActionBar" />
        <activity
            android:name=".ViewFamily"
            android:label="@string/title_activity_view_family"
            android:theme="@style/Theme.MyContacts.NoActionBar" />
        <activity
            android:name=".CreateContact"
            android:label="@string/title_activity_create_contact"
            android:theme="@style/Theme.MyContacts.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyContacts.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>